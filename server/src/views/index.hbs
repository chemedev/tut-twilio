<div class="row">
  <div class="col-md-4">
    <form action="/send-sms" method="POST" class="card card-body">
      <div class="form-group">
        <input name="message" type="text" name="" id="" class="form-control" placeholder="Write your message" autofocus>
      </div>
      <div class="form-group">
        <input name="phone" type="tel" name="" id="" class="form-control" placeholder="+0123456789" autocomplete="off">
      </div>
      <button class="btn btn-primary btn-block">SEND</button>
    </form>
  </div>
</div>